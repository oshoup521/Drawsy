# Dynamic Environment Configuration for Drawsy Frontend
# This configuration supports both localhost and ngrok access automatically

# Backend URLs - The app will auto-detect which to use based on how it's accessed
REACT_APP_API_URL=http://localhost:3000
REACT_APP_SOCKET_URL=http://localhost:3000

# Backend Ngrok URL (when frontend is accessed via ngrok)
REACT_APP_BACKEND_NGROK_URL=https://intent-knowing-ape.ngrok-free.app

# App Configuration
REACT_APP_APP_NAME=Drawsy
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true

# Environment Detection (auto-detected, but can be overridden)
# REACT_APP_FORCE_ENVIRONMENT=local|ngrok
###############################################################

# App Configuration
REACT_APP_APP_NAME=Drawsy
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true

